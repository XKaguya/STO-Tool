<Window x:Class="STOTool.SetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="SetWindow" Height="460" Width="790">
    <Border Background="#FFF" CornerRadius="10">
        <Grid>
            <TextBox x:Name="RefreshInterval" Margin="-630,0,0,150" Text="Refresh Interval (seconds)" Height="30" Width="160" TextChanged="RefreshIntervalOnTextChanged"></TextBox>
            <CheckBox x:Name="Debug" Content="Debug Mode" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsChecked="False" Margin="3,0,0,200"/>
    </Grid>
    </Border>
</Window>